pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building the project'
                
            }
        }
    }
  post {
    success {
subject: '$JOB_NAME - Build # $BUILD_NUMBER - Success',
    emailext (
      body: ''' 
      Job Name: $JOB_NAME
      Build Number: $BUILD_NUMBER
      Job URL: $BUILD_URL
      Build Status: SUCCESS
      ''',
     to: 'korangisairamesh0@gmail.com'
)
}
failure {
emailext(
subject: "Jenkins Job '${env.JOB_NAME}' - Build '${env.BUILD_NUMBER}' -Failure",
body: """
Status: ${env.JOB_NAME} has Failed!!!
Job URL: ${env.JOB_DISPLAY_URL}
Build Number: [${env.BUILD_NUMBER}]
""",
to: 'korangisairamesh0@gmail.com'
}
}
}

     

